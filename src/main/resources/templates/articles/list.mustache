{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    {{#hospitals}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
        </tr>
        <ul class="pagination justify-content-center"> <!--페이징-->
            <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
        </ul>
    {{/hospitals}}
    </tbody>
</table>
